[global]
    # Задайте шрифт с поддержкой Nerd Fonts для иконок
    # Например: "JetBrainsMono Nerd Font" или любой другой установленный Nerd Font
    font = Hack Nerd Font Mono 10
    
    # Позиция (вверху справа)
    geometry = "300x50-30+20"
    
    # Длительность показа уведомления в мс
    
    format = "%s\n%b"
    
    allow_markup = yes
    
    transparency = 10
    
    width = 300
    height = 50
    corner_radius = 0
    
    # Отступы текста (padding)
    horizontal_padding = 8
    vertical_padding = 8

[urgency_low]
    background = "#282828"
    foreground = "#f9f5d7"
    frame_color = "#fabd2f"
    timeout = 3

[urgency_normal]
    background = "#1d2021"
    foreground = "#fbf1c7"
    frame_color = "#98971a" # Blue
    timeout = 5

[urgency_critical]
    background = "#32302f"
    foreground = "#f2e5bc"
    frame_color = "#cc241d" # Red
    timeout = 0
